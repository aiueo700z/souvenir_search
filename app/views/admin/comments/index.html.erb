<h1>コメント一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>コメント</th>
      <th>投稿者</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.user.name %></td>
        <td>
          <%= link_to '削除', admin_comment_path(comment),
            method: :delete, data: { confirm: '本当に削除しますか？' },
            class: "btn btn-outline-danger" %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>