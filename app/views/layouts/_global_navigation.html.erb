<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <a class="navbar-brand" href="/"><%= image_tag 'logo.png', size: "60x60" %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to about_path, class: "nav-link text-dark" do %>
            <i class="fas fa-sitemap"></i>このサイトについて
          <% end %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %>
              <i class="fas fa-user-circle"></i>マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-home"></i>トップ
            <% end %>
          </li>
          <li>
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.search_field :keyword, placeholder:"検索するお土産名を入力してください", value: params[:keyword] %>
              <%= f.submit :"検索", class: "btn btn-primary" %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-user-plus"></i>新規登録
              <% end %>
          </li>
          <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
