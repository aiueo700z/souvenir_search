<table class="table">
  <thead>
    <tr>
      <th>お土産名</th>
      <th>画像</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.souvenir.name %></td>
        <td>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to "詳細", post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
