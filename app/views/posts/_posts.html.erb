<div class="row">
  <% posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <% if post.image.attached? %>
          <%= image_tag post.image.variant(gravity: :center, resize:"200x200^", crop:"200x200+0+0").processed, class: 'card-img-top' %>
        <% else %>
          <%= image_tag 'no_image', class: 'card-img-top' %>
        <% end %>
        <div class="card-body">
          <h4 class="card-title"><%= post.souvenir.name %></h4>
          <h5 class="card-subtitle d-flex justify-content-end">♥<%= post.favorites.count %> いいね</h5>
          <div class="card-text">
            <div class="mt-3">
              <%= link_to "詳細", post_path(post), class: "btn btn-outline-primary" %>
            </div>
            <% if post.user == current_user %>
              <div class="d-flex justidy-content-end">
                <%= link_to "編集", edit_post_path(post) %>
                <%= link_to "削除", post_path(post), method: :delete %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
